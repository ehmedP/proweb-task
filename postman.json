                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/v1/auth/logout-all",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v1", "auth", "logout-all"]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Refresh Token",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/v1/auth/refresh",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v1", "auth", "refresh"]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Change Password",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"current_password\": \"password12345\",\n    \"new_password\": \"newpassword123\",\n    \"new_password_confirmation\": \"newpassword123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/v1/auth/change-password",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v1", "auth", "change-password"]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Accounts",
            "item": [
                {
                    "name": "Get User Accounts",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/v1/accounts",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v1", "accounts"]
                        }
                    }
                },
                {
                    "name": "Get Account Details",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/v1/accounts/12345678901234512345",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v1", "accounts", "12345678901234512345"]
                        }
                    }
                },
                {
                    "name": "Create user account",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"currency_code\": \"AZN\",\n    \"initial_balance\": 1000,\n    \"daily_limit\": 500\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/v1/accounts",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v1", "accounts"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Transactions",
            "item": [
                {
                    "name": "Get Account Transactions",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/v1/transactions?account_number=12345678901234512345",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v1", "transactions"],
                            "query": [
                                {
                                    "key": "account_number",
                                    "value": "12345678901234512345"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Delete Transaction (Admin Only)",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{admin_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/v1/transactions/{{transaction_id}}",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v1", "transactions", "{{transaction_id}}"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Withdrawal",
            "item": [
                {
                    "name": "Process Withdrawal",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"account_number\": \"12345678901234512345\",\n    \"amount\": 250,\n    \"currency_code\": \"AZN\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/v1/withdrawal",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v1", "withdrawal"]
                        }
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8000"
        },
        {
            "key": "token",
            "value": ""
        },
        {
            "key": "admin_token",
            "value": ""
        }
    ]
